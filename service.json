{
  "name": "Fotoweb API",
  "apiVersion": "8.0.795.0",
  "baseUrl": "http://demo.fotoware.com",
  "description": "API for accessing the Fotoweb API by Fotoware.",
  "operations": {
    "getApiDescriptor": {
      "httpMethod": "GET",
      "uri": "/fotoweb/me",
      "summary": "Gets the client token.",
      "responseModel": "Fotoweb\\Authentication\\ApiDescriptor",
      "parameters": {
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.full-api-descriptor+json"
        }
      }
    },
    "getAsset": {
      "httpMethod": "GET",
      "uri": "{+href}",
      "summary": "Gets an asset.",
      "responseModel": "Fotoweb\\Representation\\Asset",
      "parameters": {
        "href": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.asset+json"
        }
      }
    },
    "updateMetadata": {
      "httpMethod": "PATCH",
      "uri": "{+href}",
      "summary": "Updates the metadata of an asset.",
      "responseModel": "Fotoweb\\Representation\\Asset",
      "parameters": {
        "href": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "metadata": {
          "type": "array",
          "location": "json",
          "required": true
        },
        "headerContentType": {
          "type": "string",
          "location": "header",
          "sentAs": "Content-Type",
          "default": "application/vnd.fotoware.assetupdate+json"
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.asset+json"
        }
      }
    },
    "getRenditionRequest": {
      "httpMethod": "POST",
      "uri": "{rendition_service}",
      "summary": "Gets the rendition request of an asset.",
      "responseModel": "Fotoweb\\Representation\\RenditionRequest",
      "parameters": {
        "rendition_service": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "href": {
          "type": "string",
          "location": "json",
          "required": true
        },
        "headerContentType": {
          "type": "string",
          "location": "header",
          "sentAs": "Content-Type",
          "default": "application/vnd.fotoware.rendition-request+json"
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.rendition-response+json"
        }
      }
    },
    "getAssetList": {
      "httpMethod": "GET",
      "uri": "{+href}",
      "summary": "Gets an asset list.",
      "responseModel": "Fotoweb\\Representation\\AssetList",
      "parameters": {
        "href": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.assetlist+json"
        }
      }
    },
    "getArchive": {
      "httpMethod": "GET",
      "uri": "{+href}",
      "summary": "Gets an archive.",
      "responseModel": "Fotoweb\\Representation\\Archive",
      "parameters": {
        "href": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.collection+json"
        }
      }
    },
    "getArchives": {
      "httpMethod": "GET",
      "uri": "{+href}",
      "summary": "Gets a list of archives.",
      "responseModel": "Fotoweb\\Representation\\ArchiveList",
      "parameters": {
        "href": {
          "type": "string",
          "location": "uri",
          "required": true
        },
        "headerAccept": {
          "type": "string",
          "location": "header",
          "sentAs": "Accept",
          "default": "application/vnd.fotoware.collectionlist+json"
        }
      }
    }
  },
  "models": {
    "BaseResponse": {
      "type": "object",
      "additionalProperties": {
        "location": "json"
      }
    },
    "ApiDescriptor": {
      "type": "object",
      "extends": "BaseResponse"
    },
    "Asset": {
      "type": "object",
      "extends": "BaseResponse"
    },
    "AssetList": {
      "type": "object",
      "extends": "BaseResponse"
    }
  }
}